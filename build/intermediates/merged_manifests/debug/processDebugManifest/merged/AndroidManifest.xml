<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neurotec.samples.multibiometric"
    android:versionCode="1"
    android:versionName="11.2.0.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:name="com.neurotec.samples.multibiometric.BiometricApplication"
        package="com.neurotec.samples.multibiometric"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@com.neurotec.samples.multibiometric:drawable/ic_neurotechnology_logo"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@android:style/Theme.Holo.Light" >

        <!-- Common -->
        <activity android:name="com.neurotec.samples.app.InfoActivity" />
        <activity android:name="com.neurotec.samples.app.DirectoryViewer" />

        <!-- Licensing -->
        <activity
            android:name="com.neurotec.licensing.gui.ActivationActivity"
            android:theme="@android:style/Theme.Holo.Light" />

        <!-- Multimodal -->
        <activity
            android:name="com.neurotec.samples.multibiometric.multimodal.MultiModalActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:taskAffinity="com.neurotec.samples.multibiometric.multimodal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.multimodal.FaceActivity"
            android:hardwareAccelerated="true"
            android:label="@string/face_app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.multimodal.FingerActivity"
            android:hardwareAccelerated="true"
            android:label="@string/finger_app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.multimodal.IrisActivity"
            android:hardwareAccelerated="true"
            android:label="@string/iris_app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.multimodal.VoiceActivity"
            android:hardwareAccelerated="true"
            android:label="@string/voice_app_name"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Preferences -->
        <activity
            android:name="com.neurotec.samples.multibiometric.preferences.MultimodalPreferences"
            android:parentActivityName="com.neurotec.samples.multibiometric.multimodal.MultiModalActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neurotec.samples.multibiometric.multimodal.MultiModalActivity" />
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.preferences.FacePreferences"
            android:label="@string/face_app_name"
            android:parentActivityName="com.neurotec.samples.multibiometric.multimodal.FaceActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neurotec.samples.multibiometric.multimodal.FaceActivity" />
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.preferences.FingerPreferences"
            android:label="@string/finger_app_name"
            android:parentActivityName="com.neurotec.samples.multibiometric.multimodal.FingerActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neurotec.samples.multibiometric.multimodal.FingerActivity" />
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.preferences.IrisPreferences"
            android:label="@string/iris_app_name"
            android:parentActivityName="com.neurotec.samples.multibiometric.multimodal.IrisActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neurotec.samples.multibiometric.multimodal.IrisActivity" />
        </activity>
        <activity
            android:name="com.neurotec.samples.multibiometric.preferences.VoicePreferences"
            android:label="@string/voice_app_name"
            android:parentActivityName="com.neurotec.samples.multibiometric.multimodal.VoiceActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neurotec.samples.multibiometric.multimodal.VoiceActivity" />
        </activity>
    </application>

</manifest>