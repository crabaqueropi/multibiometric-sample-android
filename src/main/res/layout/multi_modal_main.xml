<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:background="@color/md_teal_100"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/subject_id"
			android:hint="Subject ID"
			android:focusableInTouchMode="true"
			android:gravity="center"
			android:textColorHint="@color/md_blue_grey_500"
			android:background="@color/md_teal_100"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_width="match_parent"
			android:layout_height="25dip"
			android:inputType="textVisiblePassword"/>

	</LinearLayout>

	<LinearLayout
		android:background="@color/md_teal_100"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_marginBottom ="5dip"
				android:layout_marginTop="5dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:paddingTop="5dip"
				android:paddingBottom="5dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginTop="5dip"
				android:layout_marginRight="10dip"
				android:layout_marginBottom="5dip"
				android:layout_weight="1"
				android:paddingLeft="10dip"
				android:paddingTop="5dip"
				android:paddingRight="10dip"
				android:paddingBottom="5dip">

				<ImageView
					android:id="@+id/voice"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:layout_marginStart="77dp"
					android:layout_marginTop="15dp"
					android:layout_marginEnd="75dp"
					android:layout_weight="1"
					android:adjustViewBounds="true"
					android:src="@drawable/menu_voice" />

				<TextView
					android:id="@+id/voice_counter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignStart="@+id/voice"
					android:layout_alignTop="@+id/voice"
					android:layout_marginStart="18dp"
					android:layout_marginTop="16dp"
					android:paddingLeft="10dip"
					android:paddingTop="5dip"
					android:text="0"
					android:textColor="@color/white"
					android:textSize="30dip" />

			</RelativeLayout>
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="20dip"
			android:layout_gravity="bottom"
			android:orientation="vertical">

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:text="Enroll"
					android:background="@drawable/round_button"
					android:textColor="@color/white"
					android:layout_marginEnd ="10dip"
					android:layout_marginTop="10dip"
					android:layout_marginLeft="20dip"
					android:layout_marginRight="10dip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/multimodal_button_enroll"
					android:layout_weight="1"/>

				<Button
					android:text="Identify"
					android:background="@drawable/round_button"
					android:textColor="@color/white"
					android:layout_marginEnd ="10dip"
					android:layout_marginTop="10dip"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="20dip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/multimodal_button_identify"
					android:layout_weight="1"/>

			</LinearLayout>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

				<Button
					android:text="New"
					android:background="@drawable/round_button"
					android:textColor="@color/white"
					android:layout_marginEnd ="10dip"
					android:layout_marginTop="10dip"
					android:layout_marginLeft="20dip"
					android:layout_marginRight="10dip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/multimodal_button_new"
					android:layout_weight="1"/>

				<Button
					android:text="Verify"
					android:background="@drawable/round_button"
					android:textColor="@color/white"
					android:layout_marginEnd ="10dip"
					android:layout_marginTop="10dip"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="20dip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/multimodal_button_verify"
					android:layout_weight="1"/>

			</LinearLayout>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>